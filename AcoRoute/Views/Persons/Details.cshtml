@model AcoRoute.Models.Person

@{
    ViewBag.Title = "Details";
}

<h3><b><i class="fa fa-eye fa-lg"></i> @Model.Surname, @Model.Name</b></h3>

<div class="form-horizontal container-fluid">
    <div class="col-sm-6">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Apellido")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Surname)
            </dd>

            <dt>
                @Html.DisplayName("Nombre")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayName("Domicilio")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl> 
        <p>
            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control hidden" } })
            @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control hidden" } })
            <a href="/Persons/Edit/@Model.PersonId"><i class="fa fa-edit"></i> Editar</a> |
            <a href="/Persons/Index"><i class="fa fa-list"></i> Volver</a> 
        </p>
    </div>   

    <div class="col-sm-6">
        <div id="map" class="form-group" style="width: 600px; height: 500px"></div>
        <script type="text/javascript">
            $(document).ready(function () {
                var point = createPoint($("#Latitude")[0].value, $("#Longitude")[0].value);
                createMap(15, point, true);
            });
        </script>
    </div>

</div>

@Scripts.Render("~/Scripts/maps.js")
