@model AcoRoute.Models.Person

@{
    ViewBag.Title = "Delete";
}

<h3><i class="fa fa-trash fa-lg"></i> ¿Está seguro que desea eliminar a @Model.Surname, @Model.Name?</h3>
<div class="form-horizontal container-fluid">
    <div class="col-sm-6">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Apellido")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Surname)
            </dd>

            <dt>
                @Html.DisplayName("Nombre")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayName("Domicilio")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control hidden" } })
                @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control hidden" } })
                <input type="submit" value="Eliminar" class="btn btn-default" /> |
                <a href="/Persons/Index"><i class="fa fa-list"></i> Volver</a> 
            </div>

            
        }        
    </div>

    <div class="col-sm-6">
        <div id="map" class="form-group" style="width: 600px; height: 500px"></div>
        <script type="text/javascript" src="~/Scripts/maps.js"></script>
        <script type="text/javascript">

                var point = createPoint($("#Latitude")[0].value, $("#Longitude")[0].value);
                createMap(15, point, true);
        </script>
    </div>
</div>
